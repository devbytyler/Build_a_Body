<p id="notice"><%= notice %></p>

<h1>
  <%= @exercise.name%>
</h1>

<p>
  <strong>Target:</strong>
  <%= @exercise.target %>
</p>

<%= link_to 'Edit', edit_exercise_path(@exercise), class: "btn btn-warning" %>
<%= link_to 'Back to Exercises', exercises_path, class: "btn btn-secondary" %>
<hr>
<%= link_to "Begin a new workout", new_exercise_workout_path(exercise_id: @exercise.id ), class: "btn btn-primary"  %>
<hr>

<h4>Recent Workouts</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= link_to workout.date.strftime("%B %d, %Y -- %I:%M %P %Z"), exercise_workout_path(@exercise.id, workout.id) %></td>
        <td><%= truncate(workout.notes, length: 65) %></td>
        <td><%= link_to fa_icon("pencil"), edit_exercise_workout_path(@exercise.id, workout.id) %></td>
        <td>
          <%= link_to fa_icon("trash"), exercise_workout_path(@exercise.id, workout.id), method: :delete, data: { confirm: 'Are you sure? This will delete all set data associated with this workout.' }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


