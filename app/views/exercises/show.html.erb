<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @exercise.name %>
</p>

<p>
  <strong>Target:</strong>
  <%= @exercise.target %>
</p>

<%= link_to 'Edit', edit_exercise_path(@exercise) %> |
<%= link_to 'Back', exercises_path %>

<hr>

<h1>Recent Workouts</h1>

<% @workouts.each do |workout| %>
  
  <p>
    <%= link_to workout.date.strftime("%B %d, %Y -- %I:%M %P %Z"), exercise_workout_path(@exercise.id, workout.id) %>
    <%= link_to fa_icon("trash"), exercise_workout_path(@exercise.id, workout.id), method: :delete, data: { confirm: 'Are you sure? This will delete all set data associated with this workout.' }%>
  </p>

<% end %>

<%= link_to "Begin a new workout", new_exercise_workout_path(exercise_id: @exercise.id )  %>