<p id="notice"><%= notice %></p>

<h1>Workouts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Exercise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.date %></td>
        <td><%= workout.notes %></td>
        <td><%= workout.exercise %></td>
        <td><%= link_to 'Show', exercise_workout_path %></td>
        <td><%= link_to 'Edit', edit_exercise_workout_path(workout) %></td>
        <td><%= link_to 'Remove Workout', workout, method: :delete, data: { confirm: 'Are you sure? This will delete all set data as well.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workout', new_workout_path %>
